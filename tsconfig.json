{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "types": ["node", "express"],
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "inlineSourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }